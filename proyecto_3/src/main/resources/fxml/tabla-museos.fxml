<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import mx.unam.ciencias.icc.fx.*?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0"
          fx:controller="mx.unam.ciencias.icc.fx.ControladorTablaMuseos"
          xmlns:fx="http://javafx.com/fxml">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="0.0" />
  </padding>
  <TableView fx:id="tabla" GridPane.columnIndex="0" GridPane.rowIndex="1"
             GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
    <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
    <columns>
      <TableColumn fx:id="columnaNombre" text="Nombre">
        <cellValueFactory>
          <PropertyValueFactory property="nombre" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn fx:id="columnaSalas" text="Salas"
                   style="-fx-alignment: CENTER;">
        <cellValueFactory>
          <PropertyValueFactory property="salas" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn fx:id="columnaCostoGeneral" text="Costo General"
                   style="-fx-alignment: CENTER;">
        <cellFactory>
          <FabricaFormatoCelda formato="\$%2.2f" />
        </cellFactory>
        <cellValueFactory>
          <PropertyValueFactory property="costoGeneral" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn fx:id="columnaCostoEstudiantes" text="Costo Estudiantes"
                   style="-fx-alignment: CENTER;">
        <cellFactory>
          <FabricaFormatoCelda formato="\$%2.2f" />
        </cellFactory>
        <cellValueFactory>
          <PropertyValueFactory property="costoEstudiantes" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn fx:id="columnaVisitantes" text="Visitantes"
                   style="-fx-alignment: CENTER;">
        <cellValueFactory>
          <PropertyValueFactory property="Visitantes" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn fx:id="columnaEstacionamiento" text="Estacionamiento"
                   style="-fx-alignment: CENTER;">
        <cellFactory>
          <FabricaCasilla />
        </cellFactory>

        <cellValueFactory>
          <PropertyValueFactory property="estacionamiento" />
        </cellValueFactory>
      </TableColumn>
    </columns>
    <sortOrder>
      <fx:reference source="columnaNombre" />
    </sortOrder>
  </TableView>
</GridPane>
